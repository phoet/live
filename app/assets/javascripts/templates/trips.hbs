<div id="trips" class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Trips from Main Station</h2>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Train</th>
          <th>Time</th>
          <th>Platform</th>
        </tr>
        {{#each}}
          <tr>
            <td>
              {{train}}
            </td>
            <td>
              {{partial 'trip_info'}}
            </td>
            <td>
              {{platform}}
            </td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>
