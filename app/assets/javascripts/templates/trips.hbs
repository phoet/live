<div id="trips" class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      Trips from Main Station
      <a href="#" {{action update}} class="btn btn-sm btn-default"}}>
        <span class="glyphicon glyphicon-refresh"></span>
        Refresh
      </a>
    </h2>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Train</th>
          <th>Time</th>
          <th>Platform</th>
        </tr>
        {{#each}}
          <tr {{bind-attr class="isHighlighted:success"}}>
            {{#unless isGone}}
              <td>
                {{view App.TrainInfoView}}
              </td>
              <td>
                {{view App.TripInfoView}}
              </td>
              <td>
                {{platform}}
              </td>
            </tr>
          {{/unless}}
        {{else}}
          <tr>
            <td colspan="3">
              <strong><em>Loading...</em></strong>
            </td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>
